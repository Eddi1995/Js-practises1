   //EX 1) write a programe to print in an array which is greater than 10?
   //              Input const num=[2,7,15,6,18,19]?
                       
    - {
         
         let num=[2,7,15,6,18,19];
         let store=[];
    
      for (let i=0;i<=num.length;i++){
          if(num[i]>10){
              store.push(num[i]);
          }
         
       }
       console.log(store);
      }


   //EX 2) write a programe to remove duplicate in a Array element?
      
    {
      let number=[2,6,3,5,6,7,3,8];
      let removeddup=[];
      let duplicate=[];

      for(i=0;i<=number.length;i++){
          if(!removeddup.includes(number[i])){             //Includes search any number in removedup and say false to convert this as  true we use ! 
            removeddup.push(number[i]);                                                      //  and this variable can store in a variable
          }
          else{
            duplicate.push(number[i]);
          }
      }
      console.log(removeddup);
      console.log(duplicate);
   
    }
   //EX 3) write a programe to print number from an array ["Array",1,"orange",8]?
    
     {
      let namenum=["Apple",1,"orange",8,"kiwi"];
      let number=[];

      for(let i=0;i<=namenum.length;i++){
           if(typeof namenum[i]==="number"){
            number.push(namenum[i]);
           }
      }
      console.log(number);
    }
    //EX 4) write a programe to print the number from the string?
    
     {
      let mixed="123$hel45lo";

      let arrmixed= mixed.split("");
      console.log(arrmixed);
      let num=[];
      

      for(let i=0;i<arrmixed.length;i++){                                         //NOTE= In this line in condition = symbol not used bcs 
        if(arrmixed[i].charCodeAt()>=47 && arrmixed[i].charCodeAt()<=57){                     //Arrayindex will be less than array element length
          num.push(arrmixed[i]);
        }
      }
      console.log(num);
    }
    
